<div class="jumbotron">
  <h1 class="text-center"><%= @movie.name %></h1>
  <div class='row'>
    <div class="col-sm-2"><h4><strong>Director: </strong></h4></div>
    <div class="col-sm-2"><h4><%= @movie.director %> </h4></div>
    <div class="col-sm-2 col-sm-offset-3"><h4><strong>Star: </h4></strong></div>
    <div class="col-sm-3"><h4><%= @movie.star %> </h4></div>
  </div>
  <div class="row">
    <div class="col-sm-2"><h4><strong>Release Date: </strong></h4></div>
    <div class="col-sm-2"><h4><%= @movie.release_date %> </h4></div>
    <div class="col-sm-2 col-sm-offset-3"><h4><strong>Genre: </h4></strong></div>
    <div class="col-sm-3"><h4><%= link_to  "#{@movie.genre_name}", genre_path(@movie.genre.id) %> </h4></div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" style="text-align: center; margin-top: 50px;">
      <%= image_tag(@movie.image.url, style: "width: 150px; height: auto;") if @movie.image.exists? %>
      <p style="margin-top: 15px;">Image</p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" style="padding-top: 50px">
      <%= link_to  "Back", movies_path, class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" style="padding-top: 30px">
      <%=link_to  "Edit Movie", edit_movie_path(@movie.id), class: "btn btn-info btn-lg btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" style="padding-top: 30px">
      <%= link_to  "Delete Movie", movie_path(@movie.id), method: :delete, class: "btn btn-danger btn-lg btn-block", data: {confirm: 'Are you ready?' }  %>
    </div>
  </div>
</div>
