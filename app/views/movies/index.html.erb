<div class="container">
<h1>Movies</h1>
<div class="row">
  <div class="col-md-10"></div>
  <div class="col-md-2"><%=link_to "New Movie", new_movie_path, class: "btn btn-primary" %></div>
</div>
<div class="row">
  <table class="table">

    <tbody>
      <tr> 
        <td><strong>Name</strong></td>
        <td><strong>Director</strong></td>
        <td><strong>Star</strong></td>
        <td></td>
      </tr>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.director %></td>
          <td><%= movie.star %></td>
          <td><%= link_to "Show", movie_path(movie.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
