<h1><%= @genre.name%>'s movies</h1>

<div class="row">
  <div class="col-md-10"></div>
  <div class=""><%= link_to  "Back", movies_path, class: "btn btn-primary" %> </div>
</div>  
<table class="table">
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Name</strong></td>
      <td><strong>Director</strong></td>
      <td><strong>Star</strong></td>
      <td><strong>Release Date</strong></td>
    </tr>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.star %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4">
    <%= will_paginate @movies, renderer: BootstrapPagination::Rails %>
  </div>
</div>
